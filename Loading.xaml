<Window x:Class="AniHelper.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniHelper"
        mc:Ignorable="d"
        Title="Loading" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="AntiqueWhite" Grid.Row="1" />
        <Border Background="AliceBlue" Grid.Row="0"/>
        <Border Background="AliceBlue" Grid.Row="3"/>

        <TextBlock Text="Please wait, your results are being loaded!" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
        </TextBlock>
    </Grid>
</Window>
